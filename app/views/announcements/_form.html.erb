<%= error_messages_for "announcement" %>

<div class="box tabular">
  <p><%= f.text_field :title %></p>
  
  <p><%= f.text_field :starts_at %></p>
  <%= calendar_for "announcement_starts_at" %>

  <p><%= f.text_field :ends_at %></p>
  <%= calendar_for "announcement_ends_at" %>
  
  <%= f.text_area :message, :cols => 60, :rows => 10, :class => "wiki-edit", :no_label => true %>
  <%= wikitoolbar_for "announcement_message" %>
</div>
